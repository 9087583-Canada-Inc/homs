- title = "#{@order.code} #{@order.order_type_name}"
- content_for(:title, title)
- @hbw_options = { entity_code: @order.code, entity_type: @order.order_type_code, widgetContainer: '#hbw-bp-control-buttons-container', task_id: params[:task_id] }
%h2= title
.row
  .col-xs-12
    #hbw-bp-control-buttons-container
    = render partial: 'data', locals: { data: @order.data }
    = render partial: 'common'
    .row.edit-order-button
      .col-xs-12
        = link_to(t('edit'), edit_order_path(@order.code), class: 'btn btn-primary')
